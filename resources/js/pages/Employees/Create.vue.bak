const translateValidationError = (error: string) => {
    // Common Laravel validation error patterns
    const validationRules = {
        'required': 'validation.required',
        'unique': 'validation.unique',
        'email': 'validation.email',
        'min': 'validation.min',
        'max': 'validation.max',
        'numeric': 'validation.numeric',
        'string': 'validation.string',
        'date': 'validation.date',
        'date_format': 'validation.date_format',
        'before': 'validation.before',
        'after': 'validation.after',
        'confirmed': 'validation.confirmed',
        'different': 'validation.different',
        'same': 'validation.same',
        'size': 'validation.size',
        'in': 'validation.in',
        'not_in': 'validation.not_in',
        'regex': 'validation.regex',
        'alpha': 'validation.alpha',
        'alpha_num': 'validation.alpha_num',
        'alpha_dash': 'validation.alpha_dash',
        'boolean': 'validation.boolean',
        'integer': 'validation.integer',
        'json': 'validation.json',
        'mimes': 'validation.mimes',
        'image': 'validation.image',
        'exists': 'validation.exists',
        'digits': 'validation.digits',
        'digits_between': 'validation.digits_between',
        'phone': 'validation.phone',
        'url': 'validation.url',
        'ip': 'validation.ip',
        'timezone': 'validation.timezone',
        'accepted': 'validation.accepted',
        'active_url': 'validation.active_url',
        'array': 'validation.array',
        'before_or_equal': 'validation.before_or_equal',
        'after_or_equal': 'validation.after_or_equal',
        'between': 'validation.between',
        'file': 'validation.file',
        'filled': 'validation.filled',
        'gt': 'validation.gt',
        'gte': 'validation.gte',
        'in_array': 'validation.in_array',
        'lt': 'validation.lt',
        'lte': 'validation.lte',
        'max_digits': 'validation.max_digits',
        'min_digits': 'validation.min_digits',
        'multiple_of': 'validation.multiple_of',
        'not_regex': 'validation.not_regex',
        'nullable': 'validation.nullable',
        'present': 'validation.present',
        'prohibited': 'validation.prohibited',
        'prohibited_if': 'validation.prohibited_if',
        'prohibited_unless': 'validation.prohibited_unless',
        'prohibits': 'validation.prohibits',
        'required_if': 'validation.required_if',
        'required_unless': 'validation.required_unless',
        'required_with': 'validation.required_with',
        'required_with_all': 'validation.required_with_all',
        'required_without': 'validation.required_without',
        'required_without_all': 'validation.required_without_all',
        'starts_with': 'validation.starts_with',
        'ends_with': 'validation.ends_with',
        'uuid': 'validation.uuid',
        'uploaded': 'validation.uploaded',
        'password': 'validation.password',
        'current_password': 'validation.current_password',
        'new_password_different': 'validation.new_password_different',
        'mixed': 'validation.mixed',
        'letters': 'validation.letters',
        'numbers': 'validation.numbers',
        'symbols': 'validation.symbols',
        'uncompromised': 'validation.uncompromised',
    }
    
    // Check for specific validation error patterns
    for (const [rule, translationKey] of Object.entries(validationRules)) {
        // Check if the error message contains the rule pattern
        if (error.toLowerCase().includes(rule) || 
            error.toLowerCase().includes('is required') || 
            error.toLowerCase().includes('must be') || 
            error.toLowerCase().includes('has already been taken') ||
            error.toLowerCase().includes('format is invalid') ||
            error.toLowerCase().includes('field is required')) {
            
            // Handle specific cases
            if (error.toLowerCase().includes('required') || error.toLowerCase().includes('is required') || error.toLowerCase().includes('field is required')) {
                return t('validation.required')
            } else if (error.toLowerCase().includes('unique') || error.toLowerCase().includes('has already been taken')) {
                return t('validation.unique')
            } else if (error.toLowerCase().includes('email') || error.toLowerCase().includes('must be a valid email')) {
                return t('validation.email')
            } else if (error.toLowerCase().includes('format is invalid')) {
                return t('validation.date_format')
            } else if (error.toLowerCase().includes('must be a number')) {
                return t('validation.numeric')
            } else if (error.toLowerCase().includes('must be a string')) {
                return t('validation.string')
            } else if (error.toLowerCase().includes('must be a date')) {
                return t('validation.date')
            } else if (error.toLowerCase().includes('must be an integer')) {
                return t('validation.integer')
            } else if (error.toLowerCase().includes('must be a boolean')) {
                return t('validation.boolean')
            } else if (error.toLowerCase().includes('must be accepted')) {
                return t('validation.accepted')
            } else {
                return t(translationKey)
            }
        }
    }
    
    // If no specific pattern found, try common patterns
    const lowerError = error.toLowerCase()
    if (lowerError.includes('required') || lowerError.includes('is required') || lowerError.includes('field is required')) {
        return t('validation.required')
    } else if (lowerError.includes('unique') || lowerError.includes('has already been taken')) {
        return t('validation.unique')
    } else if (lowerError.includes('email') || lowerError.includes('must be a valid email')) {
        return t('validation.email')
    } else if (lowerError.includes('min') || lowerError.includes('minimum')) {
        return t('validation.min')
    } else if (lowerError.includes('max') || lowerError.includes('maximum')) {
        return t('validation.max')
    } else if (lowerError.includes('numeric') || lowerError.includes('must be a number')) {
        return t('validation.numeric')
    } else if (lowerError.includes('string') || lowerError.includes('must be a string')) {
        return t('validation.string')
    } else if (lowerError.includes('date') || lowerError.includes('must be a date')) {
        return t('validation.date')
    } else if (lowerError.includes('integer') || lowerError.includes('must be an integer')) {
        return t('validation.integer')
    } else if (lowerError.includes('boolean') || lowerError.includes('must be a boolean')) {
        return t('validation.boolean')
    } else if (lowerError.includes('accepted') || lowerError.includes('must be accepted')) {
        return t('validation.accepted')
    } else if (lowerError.includes('image') || lowerError.includes('must be an image')) {
        return t('validation.image')
    } else if (lowerError.includes('exists') || lowerError.includes('selected') && lowerError.includes('invalid')) {
        return t('validation.exists')
    } else if (lowerError.includes('file') || lowerError.includes('must be a file')) {
        return t('validation.file')
    } else if (lowerError.includes('url') || lowerError.includes('must be a valid url')) {
        return t('validation.url')
    } else if (lowerError.includes('confirmed') || lowerError.includes('confirmation')) {
        return t('validation.confirmed')
    } else if (lowerError.includes('alpha') && lowerError.includes('only contain letters')) {
        return t('validation.alpha')
    } else if (lowerError.includes('alpha') && lowerError.includes('numbers')) {
        return t('validation.alpha_num')
    } else if (lowerError.includes('regex') || lowerError.includes('format')) {
        return t('validation.regex')
    } else if (lowerError.includes('between')) {
        return t('validation.between')
    } else if (lowerError.includes('size')) {
        return t('validation.size')
    } else if (lowerError.includes('in') && lowerError.includes('selected')) {
        return t('validation.in')
    } else if (lowerError.includes('json')) {
        return t('validation.json')
    } else if (lowerError.includes('mimes') || lowerError.includes('type')) {
        return t('validation.mimes')
    } else if (lowerError.includes('digits')) {
        return t('validation.digits')
    } else if (lowerError.includes('before')) {
        return t('validation.before')
    } else if (lowerError.includes('after')) {
        return t('validation.after')
    } else if (lowerError.includes('timezone')) {
        return t('validation.timezone')
    } else if (lowerError.includes('ip')) {
        return t('validation.ip')
    } else if (lowerError.includes('uuid')) {
        return t('validation.uuid')
    } else if (lowerError.includes('array')) {
        return t('validation.array')
    } else if (lowerError.includes('phone')) {
        return t('validation.phone')
    } else if (lowerError.includes('password')) {
        return t('validation.password')
    } else if (lowerError.includes('uploaded')) {
        return t('validation.uploaded')
    } else if (lowerError.includes('different')) {
        return t('validation.different')
    } else if (lowerError.includes('same')) {
        return t('validation.same')
    } else if (lowerError.includes('prohibited')) {
        return t('validation.prohibited')
    } else if (lowerError.includes('present')) {
        return t('validation.present')
    } else if (lowerError.includes('nullable')) {
        return t('validation.nullable')
    } else if (lowerError.includes('filled')) {
        return t('validation.filled')
    } else if (lowerError.includes('starts_with')) {
        return t('validation.starts_with')
    } else if (lowerError.includes('ends_with')) {
        return t('validation.ends_with')
    } else if (lowerError.includes('multiple_of')) {
        return t('validation.multiple_of')
    } else if (lowerError.includes('mixed')) {
        return t('validation.mixed')
    } else if (lowerError.includes('letters')) {
        return t('validation.letters')
    } else if (lowerError.includes('numbers')) {
        return t('validation.numbers')
    } else if (lowerError.includes('symbols')) {
        return t('validation.symbols')
    } else if (lowerError.includes('uncompromised')) {
        return t('validation.uncompromised')
    }
    
    // If no pattern matches, return the original error
    return error
}
</script>

